{
  "name": "radar-nc-api",
  "version": "1.0.0",
  "private": true,
  "description": "NextCapital Radar API",
  "author": "Ahmad Alfawwaz",
  "license": "Proprietary",
  "main": "./dist/server.js",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "private",
    "url": "https://github.com/withmono/typescript-backend-starter.git"
  },
  "prettier": "@withmono/prettier-config",
  "scripts": {
    "build": "rm -rf dist/ && tsc -p tsconfig.build.json",
    "watch:build": "tsc -p tsconfig.build.json -w",
    "start": "node ./dist/server.js",
    "dev": "tsc-watch --onSuccess 'node -r ts-node/register ./src/localserver.ts'",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier \"src/**/*.ts\" --check",
    "lint:eslint": "eslint src --ext .ts",
    "prepare": "husky",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@withmono/di": "^1.2.0",
    "@withmono/jobs": "^1.0.0",
    "@withmono/logger": "^1.2.4",
    "@withmono/synchronized": "^1.1.3",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dayjs": "^1.11.13",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@shelf/jest-mongodb": "^4.3.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.22",
    "@types/node": "^22.15.30",
    "@withmono/eslint-config": "latest",
    "class-validator-jsonschema": "^5.0.1",
    "dotenv": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.8.3"
  }
}
